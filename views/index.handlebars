<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calend√°rio de Tarefas</title>
    <style>
        /* Estilos gerais para o corpo da p√°gina */
        body {
            font-family: 'Arial', sans-serif; /* Personalize a fonte aqui */
            background-color: #333; /* Cor de fundo mais escura para o corpo */
            color: #f4f4f9; /* Cor do texto mais clara */
            margin: 0;
            padding: 0;
            text-align: center;
            overflow: auto;
        }

        /* Estilo do t√≠tulo principal */
        h1 {
            margin-top: 20px;
            font-size: 2rem; /* Personalize o tamanho da fonte */
            color: #fff; /* Cor do t√≠tulo mais clara */
        }

        /* Cont√™iner do calend√°rio */
        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
            max-width: 700px;
            margin: 20px auto;
        }

        /* Estilo de cada dia do calend√°rio */
        .day {
            padding: 15px;
            background-color: #444; /* Cor de fundo dos dias mais escura */
            border: 1px solid #666; /* Borda dos dias mais escura */
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease; /* Anima√ß√£o de transi√ß√£o */
        }

        /* Estilo de hover para os dias */
        .day:hover {
            background-color: #555; /* Cor de fundo ao passar o mouse mais escura */
        }

        /* Estilo para o dia atual */
        .today {
            background-color: #b30d0d; /* Cor vibrante para o dia atual */
            color: white;
        }

        .today:hover {
            background-color: #c92a2a; /* Cor vibrante para o dia atual */
        }

        /* Estilo para o dia selecionado */
        .selected {
            background-color: #1bb11b; /* Cor vibrante para o dia selecionado */
            color: white;
        }

        .selected:hover {
            background-color: #2ccf2c; /* Cor vibrante para o dia selecionado */
        }


        /* Estilo dos dias da semana (Dom, Seg, Ter, etc.) */
        .day-name {
            font-weight: bold;
            padding: 10px;
            background-color: #666; /* Cor de fundo dos dias da semana mais escura */
            color: #fff; /* Cor do texto mais clara */
            border-radius: 5px;
        }

        /* Bot√µes de navega√ß√£o */
        .nav-buttons {
            margin: 20px 0;
        }

        .nav-buttons button {
            padding: 10px 20px;
            font-size: 16px;
            margin: 0 15px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            background-color: #555; /* Cor de fundo dos bot√µes mais escura */
            color: white;
            transition: background-color 0.3s;
        }

        .nav-buttons button:hover {
            background-color: #666; /* Cor de fundo ao passar o mouse mais escura */
        }
         .task-list h3 {
            margin-bottom: 10px;
            font-size: 1.5rem;
            color: #fff; /* Cor do t√≠tulo das tarefas mais clara */
        }
         .task-list li {
            padding: 8px;
            border-bottom: 1px solid #666; /* Cor da borda das tarefas mais escura */
        }

        .task-list li:last-child {
            border-bottom: none;
        }
        .task-list p {
            color: #ccc; /* Cor do texto sem tarefas mais clara */
        }
        
        /* Estiliza√ß√£o dos itens da lista de tarefas */
        .task-list {
            margin-top: 30px;
            padding: 20px;
            background-color: #444; /* Fundo da lista de tarefas */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra */
        }

        .task-list ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .task-item {
            text-align: center; /* Centraliza o texto */
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 15px;
            background-color: #616161; /* Fundo das tarefas */
            color: #fff;
            border-radius: 5px;
            margin-bottom: 8px;
            transition: background-color 0.3s;
        }
        .task-item:hover {
            background-color: #585858; /* Fundo das tarefas */
        }

        /* Estilo do cont√™iner de lixeira */
        .delete-container, .edit-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 30px; /* Ajuste a largura do bloco */
            height: 30px; /* Ajuste a altura do bloco */
            background-color: #494949; /* Fundo do bloco */
            border-radius: 5px; /* Bordas arredondadas */
            cursor: pointer;
            transition: background-color 0.3s;
            margin-right: 10px; /* Ajusta a dist√¢ncia entre os bot√µes */
        }

        .delete-container:hover, .edit-container:hover {
            background-color: #424242; /* Cor ao passar o mouse */
        }

        /* Bot√£o de lixeira */
        .delete-btn, .edit-btn {
            margin-left: 7px;
            background: rgb(75, 75, 75);
            border: none;
            color: #ff4c4c; /* Cor vermelha */
            font-size: 1.2rem;
            cursor: pointer;
            transition: color 0.3s;
            border-radius: 10px; /* Arredonda as bordas */
            padding: 4px 6px; /* Adiciona espa√ßamento interno */
        }
        .delete-btn:hover, .edit-btn:hover {
            background: rgb(59, 59, 59);
        }



        /* Responsividade para dispositivos m√≥veis */
        @media (max-width: 600px) {
            .calendar {
                grid-template-columns: repeat(4, 1fr); /* Muda o n√∫mero de colunas para telas pequenas */
                max-width: 90%;
            }

            .day {
                padding: 10px;
            }

            .nav-buttons button {
                padding: 8px 15px;
                font-size: 14px;
            }

            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <h1 id="month-title">Calend√°rio de Novembro 2024</h1>
    
    <!-- Bot√µes de navega√ß√£o entre os meses -->
    <div class="nav-buttons">
        <button onclick="changeMonth(-1)">M√™s Anterior</button>
        <button onclick="changeMonth(1)">Pr√≥ximo M√™s</button>
    </div>
    
    <!-- Calend√°rio -->
    <div id="calendar" class="calendar"></div>

    {{#if isLoggedIn}}
        {{!-- Lista de tarefas --}}
        <div class="task-list" id="task-list">
            <h3 id="task-list-title">Lista de Tarefas</h3>
            <p id="p">Aqui est√£o suas tarefas:</p>
            <ul id="task-items"></ul>
        </div>
    {{else}}
        <p>Por favor, fa√ßa login para ver suas tarefas.</p>
    {{/if}}

    <script> 
        let currentYear = new Date().getFullYear(); // Ano atual
        let currentMonth = new Date().getMonth(); // M√™s atual (0-11)
        let currentDay = new Date().getDate(); // Dia atual
        let selectedDay = null; // Armazena o dia selecionado

        const daysOfWeek = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'S√°b'];
        const monthNames = [
            'Janeiro', 'Fevereiro', 'Mar√ßo', 'Abril', 'Maio', 'Junho', 
            'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'
        ];

        // Fun√ß√£o para gerar o calend√°rio
        function generateCalendar() {
            const calendarElement = document.getElementById('calendar');

            // Primeiro dia do m√™s atual
            const firstDay = new Date(currentYear, currentMonth, 1);
            const firstDayOfWeek = firstDay.getDay(); // Dia da semana do primeiro dia (0=Domingo, 6=S√°bado)
            
            // √öltimo dia do m√™s atual
            const lastDay = new Date(currentYear, currentMonth + 1, 0);
            const totalDays = lastDay.getDate(); // Total de dias no m√™s atual

            // Preencher o calend√°rio com os dias da semana
            let daysHtml = [];
            
            // Adicionar os dias da semana como cabe√ßalho
            daysOfWeek.forEach(day => {
                daysHtml.push(`<div class="day-name">${day}</div>`);
            });
            
            // Adicionar espa√ßos em branco para os dias antes do primeiro dia
            for (let i = 0; i < firstDayOfWeek; i++) {
                daysHtml.push('<div class="day"></div>'); // Preenche os espa√ßos vazios antes do primeiro dia
            }

            // Adicionar os dias do m√™s
            for (let day = 1; day <= totalDays; day++) {
                // Verifica se o dia √© o dia atual e adiciona uma classe especial para destac√°-lo
                const isToday = day === currentDay ? 'today' : '';
                const isSelected = day === selectedDay ? 'selected' : ''; // Verifica se o dia foi selecionado
                daysHtml.push(`
                    <div class="day ${isToday} ${isSelected}" onclick="showTasks(${day})">
                        ${day}
                    </div>
                `); // Adiciona cada dia como uma c√©lula clic√°vel
            }
            calendarElement.innerHTML = daysHtml.join(''); // Preenche o calend√°rio com os dias
        }

        // Fun√ß√£o para exibir as tarefas do dia selecionado
        function showTasks(day) {
            // Armazena o dia selecionado e atualiza a visualiza√ß√£o do calend√°rio
            selectedDay = day;
            generateCalendar();

            // Atualiza o t√≠tulo da lista de tarefas
            const taskListTitle = document.getElementById('task-list-title');
            const monthName = monthNames[currentMonth];
            const year = currentYear;
            taskListTitle.textContent = `Lista de Tarefas para o dia ${day}, de ${monthName}, de ${year}`;

            // Formata a data desejada (ajuste conforme necess√°rio)
            const selectedDate = new Date(currentYear, currentMonth, day); // Criando o objeto Date

            // Formata a data para o formato ISO 8601 (como 2024-11-15T19:37:00.000Z)
            const isoDate = selectedDate.toISOString();

            // Fazendo requisi√ß√£o para lista as tarefas
            fetch(`/tarefas?data=${isoDate}`)
                .then(response => response.json())
                .then(tasks => {
                    const taskList = document.getElementById('task-items');
                    taskList.innerHTML = ''; // Limpa tarefas anteriores

                    // Ordenar tarefas por hora (crescente)
                    tasks.sort((a, b) => new Date(a.date) - new Date(b.date));

                    if (tasks.length > 0) {
                        tasks.forEach(task => {
                            // Criar item de tarefa
                            const taskItem = document.createElement('li');
                            taskItem.classList.add('task-item');
                            taskItem.style.display = 'flex'; // Ativa layout flex√≠vel
                            taskItem.style.alignItems = 'center'; // Alinha verticalmente
                            taskItem.style.justifyContent = 'space-between'; // Espa√ßo entre os itens

                            // Exibir hor√°rio no canto esquerdo
                            const taskTime = document.createElement('span');
                            const taskDate = new Date(task.date);
                            taskTime.textContent = taskDate.toLocaleTimeString('pt-BR', {
                                hour: '2-digit',
                                minute: '2-digit'
                            });
                            taskTime.style.marginRight = 'auto'; // Posiciona √† esquerda
                            taskTime.style.fontWeight = 'bold'; // Destaque para o hor√°rio

                            taskItem.appendChild(taskTime);

                            // Exibir t√≠tulo da tarefa (centralizado)
                            const taskText = document.createElement('span');
                            taskText.textContent = task.title;

                            // Estilizar para centralizar o texto
                            taskText.style.textAlign = 'center'; // Centraliza internamente
                            taskText.style.flex = '1'; // Permite ocupar o espa√ßo dispon√≠vel
                            taskText.style.margin = '0 auto'; // Centraliza horizontalmente

                            taskItem.appendChild(taskText);

                            // Formul√°rio de exclus√£o
                            const deleteForm = document.createElement('form');
                            deleteForm.action = `/tarefa/deletar`;
                            deleteForm.method = 'POST';
                            deleteForm.classList.add('delete-form');

                            const methodInput = document.createElement('input');
                            methodInput.type = 'hidden';
                            methodInput.name = 'token';
                            methodInput.value = task.token;

                            deleteForm.appendChild(methodInput);

                            const deleteBtn = document.createElement('button');
                            deleteBtn.classList.add('delete-btn');
                            deleteBtn.type = 'submit';
                            deleteBtn.innerHTML = 'üóëÔ∏è';

                            deleteForm.appendChild(deleteBtn);
                            taskItem.appendChild(deleteForm);

                            // Formul√°rio de edi√ß√£o
                            const editForm = document.createElement('form');
                            editForm.action = `/tarefa/editar/${task.token}`;
                            editForm.method = 'get';
                            editForm.classList.add('edit-form');

                            const editBtn = document.createElement('button');
                            editBtn.classList.add('edit-btn');
                            editBtn.type = 'submit';
                            editBtn.innerHTML = '‚úèÔ∏è';
                            
                            editForm.appendChild(editBtn);
                            taskItem.appendChild(editForm);

                            // Adicionar tarefa na lista
                            taskList.appendChild(taskItem);

                            // Confirmar exclus√£o
                            document.querySelectorAll('.delete-form').forEach(form => {
                                form.addEventListener('submit', function (event) {
                                    event.preventDefault(); // Previne o envio imediato do formul√°rio

                                    const confirmDelete = confirm("Tem certeza que deseja deletar esta tarefa?");
                                    if (confirmDelete) {
                                        form.submit(); // Envia o formul√°rio para a rota especificada no atributo `action`
                                    }
                                });
                            });
                        });
                    } else {
                        document.querySelector('#p').innerHTML = ''
                        taskList.innerHTML = '<p>Sem tarefas para este dia.</p>';
                    }
                }).catch(error => console.error('Erro ao buscar tarefas:', error));
        }

        // Fun√ß√£o para atualizar o t√≠tulo do m√™s
        function updateMonthTitle() {
            const monthTitle = document.getElementById('month-title');
            monthTitle.textContent = `Calend√°rio de ${monthNames[currentMonth]} ${currentYear}`;
        }

        // Fun√ß√£o para mudar o m√™s
        function changeMonth(offset) {
            currentMonth += offset;
            // caso mude de ano
            if (currentMonth < 0) {
                currentMonth = 11; // m√™s atual recebe dezembro
                currentYear--; // Se o m√™s for menor que 0, volta para dezembro e subtrai 1 do ano
            } else if (currentMonth > 11) {
                currentMonth = 0;
                currentYear++; // Se o m√™s for maior que 11, volta para janeiro e adiciona 1 ao ano
            }
            updateMonthTitle(); // Atualiza o t√≠tulo do m√™s
            generateCalendar(); // Gera o calend√°rio para o novo m√™s
        }

        // Inicializa√ß√£o
        updateMonthTitle(); // Atualiza o t√≠tulo do m√™s
        generateCalendar(); // Gera o calend√°rio
        showTasks(currentDay); // Exibe as tarefas do dia atual
    </script>
</body>
</html>
