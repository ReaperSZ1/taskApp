        min-width: 100px;
    }
    /* Primary button styling */
    .btn-primary {
        background-color: #428555;
        border: none;
        width: 100%;
        font-weight: bold;
        padding: 14px;
        transition: background-color 0.3s ease;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
    }
    /* Hover effect for primary buttons */
    .btn-primary:hover {
        background-color: rgb(53, 116, 71);
    }
    /* General alert styling */
    .alert {
        margin-bottom: 20px;
        padding: 15px;
        background-color: #d9534f;
        border-radius: 8px;
        font-weight: bold;
    }
    /* Specific styling for danger alerts */
    .alert-danger {
        color: white;
    }
    /* Styling for labels */
    label {
        display: block;
        text-align: center;
    }
</style>

